{
  "name": "rssity",
  "version": "0.0.1",
  "description": "Multi browser open-source extension overview of your RSS and Atom feeds",
  "keywords": [
    "chrome",
    "firefox",
    "safari",
    "extension",
    "chrome-extension",
    "webextension",
    "addon",
    "firefox-addons"
  ],
  "homepage": "https://github.com/KBoyarchuk/RSSity.git",
  "bugs": {
    "url": "https://github.com/KBoyarchuk/RSSity/issues",
    "email": "kboyarchuk@icloud.com"
  },
  "type": "module",
  "author": {
    "name": "Konstantin Boyarchuk",
    "email": "kboyarchuk@icloud.com"
  },
  "funding": {
    "type": "individual",
    "url": "http://example.com/donate"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/KBoyarchuk/RSSity.git"
  },
  "scripts": {
    "build:chrome": "run-s prod:chrome ext:lint ext:zip",
    "build:firefox": "run-s prod:firefox ext:lint ext:zip",
    "dev:chrome": "TARGET_BROWSER=chrome webpack --config webpack/webpack.dev.cjs --watch",
    "dev:firefox": "TARGET_BROWSER=firefox webpack --config webpack/webpack.dev.cjs --watch",
    "prod:chrome": "TARGET_BROWSER=chrome webpack --config webpack/webpack.prod.cjs",
    "prod:firefox": "TARGET_BROWSER=firefox webpack --config webpack/webpack.prod.cjs",
    "start:chrome": "web-ext --config=./config/web-ext-config.cjs run --target chromium",
    "start:firefox": "web-ext --config=./config/web-ext-config.cjs run --target firefox-desktop",
    "ext:zip": "rm -rf web-ext-artifacts/* && web-ext --config=./config/web-ext-config.cjs build",
    "ext:lint": "web-ext lint --config=./config/web-ext-config.cjs",
    "bundle:analyze": "BUNDLE_ANALYZE=true rm -rf stats.json && run-s build:chrome",
    "prepare": "git config --local core.hooksPath .githook"
  },
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@humanwhocodes/env": "^2.1.2",
    "@open-wc/semantic-dom-diff": "^0.19.4",
    "@types/chai": "^4.2.15",
    "@types/mocha": "^8.2.1",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "@web/test-runner": "^0.12.15",
    "@web/test-runner-mocha": "^0.7.2",
    "@web/test-runner-playwright": "^0.8.0",
    "chai": "^4.3.0",
    "chai-a11y-axe": "^1.3.1",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^5.0.2",
    "css-minimizer-webpack-plugin": "^1.2.0",
    "dotenv": "^8.2.0",
    "dotenv-webpack": "^6.0.2",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-lit-a11y": "^1.0.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-unicorn": "^28.0.2",
    "filemanager-webpack-plugin": "^3.1.0",
    "fork-ts-checker-webpack-plugin": "^6.1.0",
    "glob-all": "^3.2.1",
    "html-webpack-plugin": "^5.2.0",
    "img-loader": "^3.0.2",
    "lint-staged": "^10.5.4",
    "mini-css-extract-plugin": "^1.3.8",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "purgecss-webpack-plugin": "^4.0.0",
    "semantic-release": "^17.4.0",
    "semantic-release-chrome": "^1.1.3",
    "semantic-release-firefox-add-on": "^0.2.8",
    "style-loader": "^2.0.0",
    "stylelint": "^13.10.0",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-csstree-validator": "^1.9.0",
    "stylelint-high-performance-animation": "^1.5.2",
    "stylelint-value-no-unknown-custom-properties": "^2.0.0",
    "terser-webpack-plugin": "^5.1.1",
    "ts-loader": "^8.0.17",
    "typescript": "^4.2.2",
    "web-ext": "^5.5.0",
    "webextension-polyfill-ts": "^0.25.0",
    "webpack": "^5.24.1",
    "webpack-bundle-analyzer": "^4.4.0",
